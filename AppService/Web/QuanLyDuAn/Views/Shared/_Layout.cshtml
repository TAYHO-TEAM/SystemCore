                </div>
            </div>-->
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            Team<strong> Hệ Thống</strong>
            <div class="float-right d-none d-sm-inline-block">
                <b>Version: </b>@version
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->

    <script src="~/Scripts/dungchung.js?v=@version"></script>
    <script src="~/Scripts/page/main.js?v=@version"></script>
    @RenderSection("script", required: false) 
</body>
</html>
